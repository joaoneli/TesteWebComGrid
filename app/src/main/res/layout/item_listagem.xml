<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <ImageView
        android:id="@+id/ivImagem"
        android:layout_width="170dp"
        android:layout_height="64dp"
        android:tint="@color/colorAccent"
            app:srcCompat="@drawable/ic_android_black" />

    <TextView
        android:id="@+id/tvCidade"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        tools:layout_editor_absoluteY="551dp" />

    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        tools:layout_editor_absoluteY="615dp" />

    <TextView
        android:id="@+id/tvNome"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="743dp" />

    <TextView
        android:id="@+id/tvBairro"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        tools:layout_editor_absoluteY="679dp" />

</LinearLayout>
